    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/Fondo1</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo_app_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ListBuyApp</item>
    </style>

    <style name="TextInputLayout.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Custom</item>
    </style>

